<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<display-name>Beginning J2EE Chapter 5-3, p. 186, Bad Error Handling</display-name>
	<servlet>
		<servlet-name>BadErrHandling</servlet-name>
		<servlet-class>web.BadErrHandling</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>OkErrHandling</servlet-name>
		<servlet-class>web.OkErrHandling</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>BadErrHandling</servlet-name>
		<url-pattern>/BadErrHandling</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>OkErrHandling</servlet-name>
		<url-pattern>/OkErrHandling</url-pattern>
	</servlet-mapping>
</web-app>
